<script>
// Form submission to Google Form
function submitForm(e){
  e.preventDefault();
  const form = e.target;
  const data = new FormData(form);

  fetch("https://docs.google.com/forms/d/e/1FAIpQLSdKhjIu-9vZS5TydKB15I4GiqQrq_A6s5j8I3lnqx4jgovReg/formResponse", {
    method: "POST",
    mode: "no-cors",
    body: data
  });

  // success overlay (assume success because Google blocks response)
  const overlay = document.getElementById('overlay');
  overlay.classList.add('show');

  setTimeout(() => {
    overlay.classList.remove('show');
    document.getElementById('access').classList.remove('active');
    document.getElementById('program').classList.add('active');
    form.reset();
  }, 2000);
}

// Particle background
const canvas = document.getElementById('particles');
const ctx = canvas.getContext('2d');
let width = canvas.width = window.innerWidth;
let height = canvas.height = window.innerHeight;

window.addEventListener('resize', ()=>{ width = canvas.width = window.innerWidth; height = canvas.height = window.innerHeight; });

const particles = [];
const numParticles = 80;
for(let i=0;i<numParticles;i++){
  particles.push({
    x: Math.random()*width,
    y: Math.random()*height,
    r: Math.random()*2 + 1,
    dx: (Math.random()-0.5)*0.5,
    dy: (Math.random()-0.5)*0.5
  });
}

function animate(){
  ctx.clearRect(0,0,width,height);
  particles.forEach(p=>{
    p.x += p.dx;
    p.y += p.dy;
    if(p.x<0 || p.x>width) p.dx*=-1;
    if(p.y<0 || p.y>height) p.dy*=-1;
    ctx.beginPath();
    ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
    ctx.fillStyle='rgba(255,255,255,0.2)';
    ctx.fill();
  });
  requestAnimationFrame(animate);
}
animate();
</script>

